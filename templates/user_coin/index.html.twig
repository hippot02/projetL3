{% extends 'userProfil.html.twig' %}

{% block title %}Nombre d'uploads restants
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1> Vous avez le droit à: </h1>

				{% if "ROLE_ADMIN" in app.user.roles or "ROLE_PRIME" in app.user.roles %}
					<h2>Aucune limite de fichiers ✅</h2>
				{% else %}
					<h2>{{app.user.coins}} Fichiers ✅</h2>
				{% endif %}

	</div>
{% endblock %}
