{% extends 'userProfil.html.twig' %}

{% block title %}Vos Contact{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vos Contact ({{ app.user.contacts|length }})</h1>
</div>
    <div href="#contact" class="grix xs6">
{% for contact in app.user.contacts %}
    <div class="pos-xs1"> Email : </div>
    <div class="pos-xs2">{{contact.mail}}</div>
    <div class="pos-xs3">  |  </div>
    <div class="pos-xs1"> Username : </div>
    <div class="pos-xs2">{{contact.username}}</div>
    {% endfor %}
    </div>

{% endblock %}
