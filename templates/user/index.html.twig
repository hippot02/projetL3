{% extends 'userProfil.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
</div>
<div href="#profil" class="grix xs4 container">
	{% for message in app.flashes('message') %}
		<div class="col-xs4">
			<div class="p-3 my-2 rounded-1 green light-4 text-green text-dark-4">{{message}}</div>
		</div>
	{% endfor %}
	<div class="col-xs4">
		<h1>Votre Profil</h1>
	</div>
	<div class="col-xs1">Mon email :</div>
	<div class="col-xs3">{{app.user.email}}</div>
	<div class="col-xs1">Mot de passe :</div>
	<div class="col-xs3">•••••••••</div>
	<div class="col-xs1">Rôles :</div>
	<div class="col-xs3">
		{% for role in app.user.roles %}
			{{role}}
		{% endfor %}
	</div>
	<div class="col-xs4">
		<a href="{{path('app_user_profil_modif')}}" class="btn blue">Modifier le profil</a>
		<a href="{{path('app_user_mdp_modif')}}" class="btn blue">Modifier le mot de passe</a>
	</div>
</div>{% endblock %}
